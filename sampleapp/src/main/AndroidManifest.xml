<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.com.temasys.skylink.sdk.sampleapp">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".audio.AudioCallActivity"
            android:label="@string/title_section1"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".chat.ChatActivity"
            android:label="@string/title_section3"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".filetransfer.FileTransferActivity"
            android:label="@string/title_section4"/>
        <activity
            android:name=".datatransfer.DataTransferActivity"
            android:label="@string/title_section5"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".video.VideoCallActivity"
            android:label="@string/title_section2"/>
        <activity
            android:name=".multipartyvideo.MultiPartyVideoCallActivity"
            android:label="@string/title_section6"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".ConfigFragment.ConfigActivity"
            android:label="@string/settings"
            android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>