<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_audio_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_150dp"
                android:layout_height="@dimen/dp_150dp"
                android:src="@drawable/img_blink"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50dp"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btnAudioSpeaker"
                android:layout_width="@dimen/dp_50dp"
                android:layout_height="@dimen/dp_50dp"
                android:layout_marginRight="@dimen/dp_30dp"
                android:background="@drawable/button_circle"
                android:src="@drawable/ic_audio_speaker"/>

            <ImageButton
                android:id="@+id/btnAudioEnd"
                android:layout_width="@dimen/dp_50dp"
                android:layout_height="@dimen/dp_50dp"
                android:background="@drawable/button_circle_call_end"
                android:src="@drawable/ic_audio_call_end"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>