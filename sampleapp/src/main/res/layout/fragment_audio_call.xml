<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_audio_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_audio_room_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp_10dp"
        android:textSize="@dimen/sp_14sp"
        android:textColor="@android:color/black"
        android:text="You are not connected to any room"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/cardview_shadow_start_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_110dp"
            android:background="@color/cardview_light_background">
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_120dp"
                android:layout_height="@dimen/dp_120dp"
                android:src="@drawable/img_blink"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_50dp"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btnAudioSpeaker"
                android:layout_width="@dimen/dp_50dp"
                android:layout_height="@dimen/dp_50dp"
                android:layout_marginRight="@dimen/dp_30dp"
                android:background="@drawable/button_circle"
                android:src="@drawable/ic_audio_speaker" />

            <ImageButton
                android:id="@+id/btnAudioEnd"
                android:layout_width="@dimen/dp_50dp"
                android:layout_height="@dimen/dp_50dp"
                android:background="@drawable/button_circle_call_end"
                android:src="@drawable/ic_audio_call_end" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>