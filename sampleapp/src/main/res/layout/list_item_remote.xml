<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll_row_remote"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_chat_group_sig"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10dp"
    >

    <Button
        android:id="@+id/btnChatUser"
        android:layout_width="@dimen/dp_50dp"
        android:layout_height="@dimen/dp_50dp"
        android:layout_marginTop="@dimen/dp_5dp"
        android:background="@drawable/button_circle_avatar_chat"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:text="M"/>

    <TextView
        android:id="@+id/txtRemotePeerUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3dp"
        android:layout_marginLeft="@dimen/dp_10dp"
        android:layout_toRightOf="@id/btnChatUser"
        android:text="peerId1234"
        android:textSize="@dimen/sp_9sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRemotePeerUser"
        android:layout_marginLeft="@dimen/dp_10dp"
        android:layout_toRightOf="@id/btnChatUser">

        <TextView
            android:id="@+id/txtRemoteChatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_70dp"
            android:background="@drawable/button_corner_chat_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_7dp"
            android:paddingLeft="@dimen/dp_7dp"
            android:paddingRight="@dimen/dp_10dp"
            android:paddingTop="@dimen/dp_7dp"
            android:text="pham thi muoi"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/txtRemoteTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRemoteChatContent"
            android:layout_marginLeft="-90dp"
            android:layout_marginRight="@dimen/dp_5dp"
            android:layout_toRightOf="@id/txtRemoteChatContent"
            android:text="timeStamp timeStamp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_6sp"/>
    </RelativeLayout>


</RelativeLayout>

