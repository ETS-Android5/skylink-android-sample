<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dp_40dp"
            android:layout_height="@dimen/dp_40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_back_40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14sp"/>

            <TextView
                android:id="@+id/txtRoomId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initing_room_id"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_7sp"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/txtPaticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Participants"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_9sp"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtPaticipants"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRemotePeer7"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R7"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer6"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R6"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer5"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R5"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer4"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R4"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer3"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R3"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer2"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R2"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRemotePeer1"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_margin="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar"
                    android:text="R1"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>


                <Button
                    android:id="@+id/btnLocalPeer"
                    android:layout_width="@dimen/dp_25dp"
                    android:layout_height="@dimen/dp_25dp"
                    android:layout_marginBottom="@dimen/dp_5dp"
                    android:layout_marginLeft="@dimen/dp_5dp"
                    android:layout_marginTop="@dimen/dp_5dp"
                    android:background="@drawable/button_circle_avatar_local"
                    android:text="L"
                    android:textColor="@color/primary_dark"
                    android:visibility="gone"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>


</RelativeLayout>