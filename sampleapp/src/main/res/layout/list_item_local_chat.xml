<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_row_local"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_chat_group_sig"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10dp">

        <TextView
            android:id="@+id/txtLocalPeerUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_3dp"
            android:layout_marginLeft="@dimen/dp_10dp"
            android:text="peerId1234"
            android:textSize="@dimen/sp_9sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLocalPeerUser">

            <TextView
                android:id="@+id/txtLocalChatContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_corner_chat_content_local"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_7dp"
                android:paddingBottom="@dimen/dp_7dp"
                android:paddingRight="@dimen/dp_7dp"
                android:paddingLeft="@dimen/dp_10dp"
                android:layout_marginLeft="@dimen/dp_70dp"
                android:textColor="@android:color/white"
                android:text="pham thi muoi"
                />

            <TextView
                android:id="@+id/txtLocalTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txtLocalChatContent"
                android:layout_below="@id/txtLocalChatContent"
                android:layout_marginRight="-90dp"
                android:layout_marginLeft="@dimen/dp_5dp"
                android:text="timeStamp timeStamp"
                android:textSize="@dimen/sp_6sp"
                android:textColor="@color/color_black"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

