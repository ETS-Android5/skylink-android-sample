<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="CustomActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_settings</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">@string/action_configuration</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="SettingTextViewLabel" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dp_5dp</item>
        <item name="android:textSize">@dimen/sp_18sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="SettingLayout" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_10dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingTextViewItem" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="SettingEdittext" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dp_5dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:padding">@dimen/dp_5dp</item>
        <item name="android:textSize">@dimen/sp_12sp</item>
    </style>

    <dimen name="sp_18sp">18sp</dimen>
</resources>
