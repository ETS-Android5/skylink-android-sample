<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_white_trans_70"/>
            <stroke android:width="@dimen/dp_0_5dp" android:color="@color/primary"/>
        </shape>
    </item>
    <item android:state_hovered="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/cardview_shadow_start_color"/>
            <stroke android:width="@dimen/dp_0_5dp" android:color="@color/primary"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_white"/>
            <stroke android:width="@dimen/dp_0_5dp" android:color="@color/primary"/>
        </shape>
    </item>
</selector>